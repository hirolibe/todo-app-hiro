.board
  %h2.board_title= @board.title
  -# - if user_signed_in? && current_user.has_written?(@board)
  .board_actions
    .dropdown
      = image_tag 'Combined Shape.png', class: 'dropbtn'
      .dropdown-content.mini
        = link_to 'Edit', edit_board_path(@board)
        = link_to 'Delete', board_path(@board), data: { method: 'delete', confirm: '本当に削除してもいいですか？' }
  .board_content
    = @board.content
  .board_info
    -# = image_tag @board.user.avatar_image
    = image_tag 'アイコン.jpg'
    %div
      -# %p= @board.author_title
      %p hiro
      -# %p= @board.display_created_at
      %p 2024/6/10

.board
  %h2 Tasks
  - @tasks.each do |task|
    .board_task
      %p= task.content

.container
  =link_to new_board_task_path(@board) do
    .new-board
      %span + Add new task